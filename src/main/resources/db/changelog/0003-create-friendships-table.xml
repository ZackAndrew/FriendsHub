<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1766679502180-1" author="Andrii">
        <createTable tableName="friendships">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_friendships"/>
            </column>
            <column name="requester_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="addressee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1766679502180-5" author="Andrii">
        <addForeignKeyConstraint baseColumnNames="addressee_id"
                                 baseTableName="friendships"
                                 constraintName="FK_FRIENDSHIPS_ON_ADDRESSEE"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="1766679502180-6" author="Andrii">
        <addForeignKeyConstraint baseColumnNames="requester_id"
                                 baseTableName="friendships"
                                 constraintName="FK_FRIENDSHIPS_ON_REQUESTER"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>