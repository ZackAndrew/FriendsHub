<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260120-availability-1" author="Andrii">
        <createTable tableName="availabilities">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_availabilities"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20260120-availability-2" author="Andrii">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="availabilities"
                                 constraintName="fk_availabilities_on_user"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>